<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clSearched">

    <LinearLayout
        android:id="@+id/ll_searched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/search_tabs"
            app:pstsShouldExpand="true"
            app:pstsTextAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="14sp"
            android:textColor="#000000"
            app:pstsDividerPadding="0dp"
            app:pstsDividerColor="#52da77"
            app:pstsIndicatorColor="#ffaaaa"
            app:pstsUnderlineColor="#5976d6"
            app:pstsTabPaddingLeftRight="14dp"
            app:pstsScrollOffset="20dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/search_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

        </android.support.v4.view.ViewPager>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>